---
import experiences from "../collections/experiences.js";
import education from "../collections/education.js";
import aboutImage from "../assets/images/about/about.png";
import AboutExperience from "../components/about-experience.astro";
import AboutEducation from "../components/about-education.astro";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="About Me">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="About Me"
      description="Hello 👋 I'm a full-stack developer from Vadodara, India. I'm passionate about building new products, learning new technology and exploring the world."
    />

  <img src={aboutImage.src} width={aboutImage.width} height={aboutImage.height} class="relative z-30 w-full my-10 rounded-xl" alt="About" />

    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      Writes code 👨🏻‍💻, chases sunsets 🌄, drinks tea ☕️.
	  <br /><br />
	  Trekking 🏔️, star-gazing 🌌 and reading books 📚 is what I love to do when I'm offline.
	  <br /><br />
	  Sports? Everything! Cricket 🏏, Badminton 🏸 and recently Pickleball 🏓 too are my favourites 😍.
    </p>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Experience
    </h2>
    <div class="px-5 py-10">
      {
        experiences.map((experience) => {
          return (
            <div class="pb-10 border-l border-gray-200 last:border-l-0 dark:border-neutral-700">
              <AboutExperience
                dates={experience.dates}
                role={experience.role}
                company={experience.company}
                description={experience.description}
                logo={experience.logo}
              />
            </div>
          )
        })
      }
    </div>

	<h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Education
    </h2>
	<div class="px-5 py-10">
	  {
		education.map((edu) => {
		  return (
			<div class="pb-10 border-l border-gray-200 last:border-l-0 dark:border-neutral-700">
			  <AboutEducation
				institution={edu.institution}
				degree={edu.degree}
				year={edu.year}
				logo={edu.logo}
				details={edu.details}
			  />
			</div>
		  )
		})
	  }
	</div>

    <h2 class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200">Let's Connect</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      If you want to stay up to date with my work be sure to <a
        href="https://github.com/coderGtm"
        target="_blank"
        class="text-indigo-600 underline">follow me on GitHub</a
      >, or you can send me a <a href="https://www.linkedin.com/in/the-gautam-mehta"
	  target="_blank"
	  class="text-indigo-600 underline">LinkedIn message</a> or an 
	  <a href="mailto:gautammehta.connect@gmail.com" class="text-indigo-600 underline"
        >email</a
      > and I'll get back to you.
    </p>
  </section>
</Layout>
